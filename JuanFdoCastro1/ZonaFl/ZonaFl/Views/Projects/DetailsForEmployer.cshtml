               vmpost.getPostuladosFilterFromServer(idoffer);
               
            });

        //});

        var status = getUrlParameter('statusProject');
        if(status==0)
        {
            $('#applied-btn').addClass("project-tab-selected");
           
            $('#incourse-btn').removeClass("project-tab-selected");
            $('#finished-btn').removeClass("project-tab-selected");
            $('#deleted-btn').removeClass("project-tab-selected");
            $('#applied').css("display", "block");
            $('#incourse').css("display", "none");
            $('#finished').css("display", "none");
            $('#deleted').css("display", "none");
            
        }
        else if(status == 1)
        {
            $('#applied-btn').removeClass("project-tab-selected");
            $('#incourse-btn').addClass("project-tab-selected");
            $('#finished-btn').removeClass("project-tab-selected");
            $('#deleted-btn').removeClass("project-tab-selected");
            $('#applied').css("display", "none");
            $('#incourse').css("display", "block");
            $('#finished').css("display", "none");
            $('#deleted').css("display", "none");

        }
        else if (status == 2) {
            $('#applied-btn').removeClass("project-tab-selected");
            $('#incourse-btn').removeClass("project-tab-selected")
            $('#finished-btn').addClass("project-tab-selected")
            $('#deleted-btn').removeClass("project-tab-selected");
            $('#applied').css("display", "none");
            $('#incourse').css("display", "none");
            $('#finished').css("display", "block");
            $('#deleted').css("display", "none");
        }
        else if (status == 3) {
            $('#applied-btn').removeClass("project-tab-selected");
            $('#incourse-btn').removeClass("project-tab-selected")
            $('#finished-btn').removeClass("project-tab-selected")
            $('#deleted-btn').addClass("project-tab-selected");
            $('#applied').css("display", "none");
            $('#incourse').css("display", "none");
            $('#finished').css("display", "node");
            $('#deleted').css("display", "block");
        }
     
      
       
    });
    var getUrlParameter = function getUrlParameter(sParam) {
        var sPageURL = decodeURIComponent(window.location.search.substring(1)),
            sURLVariables = sPageURL.split('&'),
            sParameterName,
            i;

        for (i = 0; i < sURLVariables.length; i++) {
            sParameterName = sURLVariables[i].split('=');

            if (sParameterName[0] === sParam) {
                return sParameterName[1] === undefined ? true : sParameterName[1];
            }
        }
    };

   
   

</script>

